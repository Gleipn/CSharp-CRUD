@model List<Fornecedor>
@{
}

<div class="text-center">
    <h1>Lista de Fornecedores</h1>
</div>

<div class="container mt-3">
    <p>
        <a asp-controller="Fornecedores" asp-action="Create" class="btn btn-secondary">Cadastrar Novo</a>
    </p>

    <div class="table-responsive">
        <table class="table">

            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CNPJ</th>
                    <th>Segmento</th>
                    <th>CEP</th>
                    <th>Endereco</th>
                    <th>Ações</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var fornecedor in Model)
                {
                    <tr>
                        <td>@fornecedor.Nome</td>
                        <td>@fornecedor.Cnpj</td>
                        <td>@fornecedor.Segmento</td>
                        <td>@fornecedor.Cep</td>
                        <td>@fornecedor.Endereco</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-controller="Fornecedores" asp-action="Edit" asp-route-id="@fornecedor.Id">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Fornecedores" asp-action="Delete" asp-route-id="@fornecedor.Id" 
                            onclick="return confirm("Tem certeza?>Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>